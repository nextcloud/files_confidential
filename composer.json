{
	"config": {
		"platform":{
			"php": "8.0"
		}
	},
	"require": {
		"ext-dom": "*",
		"ext-libxml": "*",
		"smalot/pdfparser": "^2.10"
	},
	"autoload": {
		"psr-4": {
			"OCA\\Files_Confidential\\": "lib/"
		}
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3",
		"nextcloud/coding-standard": "^1",
		"phpunit/phpunit": "^9.5",
		"psalm/phar": "^6",
		"nextcloud/ocp": "dev-stable29"
	},
	"scripts": {
		"lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix ./lib --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"psalm": "psalm.phar",
		"psalm:update-baseline": "psalm.phar --threads=1 --update-baseline",
		"psalm:update-baseline:force": "psalm.phar --threads=1 --update-baseline --set-baseline=psalm-baseline.xml",
		"psalm:clear": "psalm.phar --clear-cache && psalm.phar --clear-global-cache",
		"psalm:fix": "psalm.phar --alter --issues=InvalidReturnType,InvalidNullableReturnType,MissingParamType,InvalidFalsableReturnType,MissingOverrideAttribute,ClassMustBeFinal",
		"test:unit": "phpunit --config test/phpunit.xml"
	}
}
